<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:alpha="0.9">

    <ImageView
        android:id="@+id/logo_sh"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/sh1"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        />

    <TextView
        android:id="@+id/text_header2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:paddingTop="15dp"
        android:text="-"
        android:background="@drawable/text_header"
        android:textAlignment="center"
        android:layout_below="@id/logo_sh"
        android:textSize="23sp"
        android:fontFamily="sans-serif" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/username"
        android:ems="10"
        android:background="@drawable/ronded_edittext"
        android:cursorVisible="true"
        android:textCursorDrawable="@null"
        android:textSize="20sp"
        android:textColor="#333333"
        android:drawablePadding="25dp"
        android:textColorHint="#d8d8d8d8"
        android:paddingTop="5dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="20dp"
        android:drawableLeft="@drawable/ic_username"
        android:fontFamily="sans-serif"
        android:layout_below="@id/logo_sh"
        android:editable="false"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signout_btn"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="25sp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:layout_below="@id/username"
        android:text="Logout"
        android:textAllCaps="false"
        android:background="@drawable/roundedbutton"/>

</RelativeLayout>